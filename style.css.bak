/* --- Global --- */
body {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-family: sans-serif;
    background-color: #000000;
    color: #F5F5DC;
}

h1 {
    color: #F5F5DC;
}

/* --- Main App Container --- */
#app-container {
    width: 520px;
    background-color: #5E716A; /* Green-grey base */
    border: 1px solid #ccc;
    border-radius: 8px;
    padding: 10px;
    box-sizing: border-box;
}

/* --- Staff (Display) --- */
#staff-container {
    position: relative; 
    background-color: #F5F5DC; /* Cream */
    border-radius: 5px;
    padding: 10px;
    box-sizing: border-box;
    height: 170px; /* Taller to show ledger lines */
    overflow: hidden; /* Hide any VexFlow overflow */
}

#staff-output {
    background-color: transparent;
    color: #999;
    text-align: center;
    padding-top: 40px;
}

/* --- Piano Roll (Input) --- */
#piano-roll-container {
    margin-top: 10px;
    background-color: #F5F5DC; /* Cream */
    border-radius: 5px;
    padding: 5px;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
}

#piano-roll-labels {
    width: 40px;
    height: 180px;
    background-color: #eee;
    display: flex;
    flex-direction: column;
    border: 1px solid #ccc;
    border-right: none;
    box-sizing: border-box;
}

.piano-roll-label {
    height: 10px;
    box-sizing: border-box;
    font-size: 8px;
    font-weight: bold;
    color: #333;
    padding-left: 2px;
}
.piano-roll-label.tonic {
    background-color: #ddd;
}

#piano-roll {
    position: relative;
    width: 100%;
    height: 180px; 
    background-color: #FFF;
    border: 1px solid #ccc;
    cursor: pointer;
    overflow: hidden;
}

/* A single line in the piano roll grid */
.piano-roll-line {
    width: 100%;
    height: 9px; /* 9px line + 1px border = 10px */
    border-bottom: 1px solid #eee;
    box-sizing: border-box;
}
.piano-roll-line.tonic {
    background-color: #f0f0f0;
    border-bottom: 1px solid #ddd;
}

/* A single vertical line for beats */
.piano-roll-beat {
    position: absolute;
    top: 0;
    width: 1px;
    height: 100%;
    background-color: #eee;
}
.piano-roll-beat.measure {
    background-color: #999;
}

/* A note displayed in the piano roll */
.note-block {
    position: absolute;
    background-color: #B8860B; /* Goldenrod */
    border: 1px solid #9A700A;
    border-radius: 2px;
    opacity: 0.8;
    box-sizing: border-box;
    height: 10px; /* Fit on one line */
    /* Add a tail for dragging */
    border-right: 5px solid rgba(0, 0, 0, 0.2);
}

/* --- Controls --- */
#controls {
    margin-top: 5px; 
    background-color: transparent;
    color: #000000;
    padding: 10px 0 0 0; /* Padding only on top */
    border-radius: 0;
    border: none;
    border-top: 1px solid #4a5a54; 
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
}

#controls button {
    border: 1px solid #aaa;
    background: #eee;
    color: #000;
    padding: 5px 10px;
    cursor: pointer;
    border-radius: 4px;
    margin: 3px;
}

#controls button:hover {
    background: #ddd;
}

/* --- Seed Loader --- */
#seed-loader {
    margin-top: 10px;
    padding-top: 10px;
    border-top: 1px solid #4a5a54;
    display: flex;
}
#seed-input {
    flex-grow: 1;
    border: 1px solid #ccc;
    padding: 4px;
    background: #F5F5DC;
    color: #000;
}
#seed-loader button {
    margin-left: 5px;
    border: 1px solid #aaa;
    background: #eee;
    color: #000;
    padding: 0 10px;
    cursor: pointer;
    border-radius: 4px;
}